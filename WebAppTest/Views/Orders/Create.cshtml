@model WebAppTest.Models.Orders

<h2>Создание нового заказа</h2>

<form asp-controller="Orders" asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="SenderCity">Город отправителя</label>
        <input asp-for="SenderCity" class="form-control" placeholder="Введите город отправителя" />
        <span asp-validation-for="SenderCity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SenderAddress">Адрес отправителя</label>
        <input asp-for="SenderAddress" class="form-control" placeholder="Введите адрес отправителя" />
        <span asp-validation-for="SenderAddress" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RecipientCity">Город получателя</label>
        <input asp-for="RecipientCity" class="form-control" placeholder="Введите город получателя" />
        <span asp-validation-for="RecipientCity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RecipientAddress">Адрес получателя</label>
        <input asp-for="RecipientAddress" class="form-control" placeholder="Введите адрес получателя" />
        <span asp-validation-for="RecipientAddress" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CargoWeight">Вес груза (кг)</label>
        <input asp-for="CargoWeight" class="form-control" placeholder="Введите вес груза" step="0.01" />
        <span asp-validation-for="CargoWeight" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PickupDate">Дата забора груза</label>
        <input asp-for="PickupDate" type="date" class="form-control" />
        <span asp-validation-for="PickupDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-3">Сохранить</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}